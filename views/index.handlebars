<header>
    <h1>Eat-da-Burger!</h1>
</header>

<div class="container mt-5">

    <div class="row">
        <div class="col">
            <h2>Burgers ready!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Devoured burgers!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2 class="mt-5">Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Buger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Devour
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>